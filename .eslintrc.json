{
  "extends": [
    "plugin:prettier/recommended",
    "next/core-web-vitals",
    "next/typescript"
  ],
  "plugins": [
    "import"
  ],
  "rules": {
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "pathGroups": [
          {
            "pattern": "react",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "@/**",
            "group": "internal"
          }
        ],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ],
    "react/no-unescaped-entities": [
      "error",
      {
        "forbid": [
          {
            "char": ">",
            "alternatives": [
              "&gt;"
            ]
          },
          {
            "char": "<",
            "alternatives": [
              "&lt;"
            ]
          },
          {
            "char": "}",
            "alternatives": [
              "&#125;"
            ]
          },
          {
            "char": "{",
            "alternatives": [
              "&#123;"
            ]
          }
        ]
      }
    ]
  }
}
